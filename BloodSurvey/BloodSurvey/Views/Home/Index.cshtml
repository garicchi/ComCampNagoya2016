@using BloodSurvey.Models
<div class="row">
    <div class="col-md-4">
        <div id="div-questions">
            @{
                foreach (var i in BloodFactory.GetQuestions())
                {
                    <p>Q.@(i.Id) @i.Question</p>

                    <select id="question@(i.Id)" size="1" class="form-control">
                        <option value="0">No</option>
                        <option value="1">Yes</option>
                    </select>
                }
            }
        </div>
        <div id="div-blood">
            <div id="div-blood-inner">
                <button class="form-control" onclick="closeBlood()">閉じる</button>
                <p>あなたの血液型を教えて下さい</p>
                <select id="select-blood" size="1" class="form-control">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="AB">AB</option>
                    <option value="O">O</option>
                </select>
                <img id="img-loading" src="~/Image/loading.gif" />
                <button class="form-control" onclick="insertSurvey()">送信</button>
            </div>
        </div>
        <button class="form-control" onclick="openBlood()">Send</button>
    </div>
</div>
<script type="text/javascript">
    function closeBlood() {
        $("#div-blood").fadeOut(200);
    }
    function openBlood() {
        $("#div-blood").fadeIn(200);
    }
    function insertSurvey() {
        $("#img-loading").show();
        var bloodSelect = $("#select-blood");
        var blood = bloodSelect.val();
        var selects = $("#div-questions").children("select");
        var array = Array();
        for (var i = 0; i < selects.length; i++) {
            var select = selects[i];
            var index = select.selectedIndex;
            var item = index;
            array.push(item);
        }
        var data = {
            q1: array[0],
            q2: array[1],
            q3: array[2],
            q4: array[3],
            q5: array[4],
            q6: array[5],
            q7: array[6],
            q8: array[7],
            q9: array[8],
            q10: array[9],
            q11: array[10],
            q12: array[11],
            blood:blood
        };
        $.ajax({
            type: "POST",
            url: "/api/survey",
            contentType: "application/json",
            data: "'"+JSON.stringify(data)+"'",
            success: function (data) {
                $("#img-loading").hide();
                closeBlood();
            }
        });
        
    }
</script>